<nav class="navbar">
    <div class="navbar-logo">
        <a href="{{navbar.logo.link}}">
            <img src="{{navbar.logo.image}}" alt="{{navbar.logo.altText}}">
        </a>
    </div>
    <ul class="navbar-categories">
        {{#each navbar.categories}}
            <li class="category">
                <span>{{name}}</span>
                <ul class="subcategory">
                    {{#each categoryModels}}
                        <li class="subcategory-item">
                            <span>{{name}}</span>
                            <ul class="attributes">
                                {{#each categoryAttributeModels}}
                                    <li class="attribute">{{name}}</li>
                                {{/each}}
                            </ul>
                        </li>
                    {{/each}}
                </ul>
            </li>
        {{/each}}
    </ul>
    <ul class="navbar-actions">
        {{#each navbar.actions}}
            <li class="action">
                <a href="{{link}}">
                    <i class="icon-{{icon}}"></i> {{name}}
                    {{#if count}}
                        <span class="count">{{count}}</span>
                    {{/if}}
                </a>
            </li>
        {{/each}}
    </ul>
    <div class="navbar-search">
        <form action="{{navbar.search.action}}" method="GET">
            <input type="text" placeholder="{{navbar.search.placeholder}}" name="query">
            <button type="submit">Search</button>
        </form>
    </div>
</nav>
<style>
